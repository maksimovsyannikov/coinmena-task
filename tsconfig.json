{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "./declarations.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
